<Application x:Class="KeyboardSimulator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate TargetType="Button" x:Key="btTemplate">
            <Border CornerRadius="15" BorderBrush="CadetBlue" BorderThickness="2"
                    Background="{TemplateBinding Background}" Height="40" Width="{TemplateBinding Width}" >
                <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}" FontWeight="Bold" FontSize="15"/>
            </Border>
        </ControlTemplate>
    </Application.Resources>
</Application>
